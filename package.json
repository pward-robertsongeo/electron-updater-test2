{
  "name": "electron-updater-test2",
  "version": "0.8.1",
  "main": "main.js",
  "description": "electron-updater example project",
  "author": "pward",
  "scripts": {
    "start": "electron .",
    "publish": "electron-builder -p always"
  },
  "devDependencies": {
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "electron-notarize": "^1.1.1"
  },
  "dependencies": {
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9"
  },
  "build": {
    "appId": "com.github.pward-robertsongeo.electronupdatertest2",
    "afterSign": "./build/notarize.js",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "category": "your.app.category.type",
      "target": "AppImage"
    }
  }
}
